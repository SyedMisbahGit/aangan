# Server Configuration
NODE_ENV=development
PORT=3001

# Database Configuration
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/aangan
DB_PATH=./whispers.db

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# Email Configuration (for password reset, etc.)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your_email@example.com
SMTP_PASS=your_email_password
SMTP_FROM=noreply@aangan.app

# OpenAI Configuration (for AI features)
OPENAI_API_KEY=your_openai_api_key_here

# Sentry Configuration (error tracking)
SENTRY_DSN=your_sentry_dsn_here

# Firebase Admin (if using Firebase for auth)
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_CLIENT_EMAIL=your-client-email@example.com
FIREBASE_PRIVATE_KEY=your-private-key-here

# Redis Configuration (for caching/queue)
REDIS_URL=redis://localhost:6379

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100   # Max requests per window per IP

# Security Headers
HELMET_ENABLED=true
CONTENT_SECURITY_POLICY=default-src 'self'
