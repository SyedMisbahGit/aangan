# Railway Deployment Environment Variables
PORT=3001
JWT_SECRET=your-super-secret-jwt-key-here
ADMIN_USERNAME=admin
ADMIN_PASSWORD=aangan-secret
ADMIN_PASS_HASH=$2a$10$your-bcrypt-hash-here
ADMIN_API_KEY=changeme
SOCKET_SHARED_KEY=superSecretSocketKey

# PostgreSQL connection string (used in production)
DATABASE_URL=

# SQLite DB path (used in local/dev)
DB_PATH=backend/whispers.db

# Redis (optional - for heartbeat and counters)
REDIS_URL=redis://localhost:6379

# Frontend URL (for CORS)
FRONTEND_URL=https://your-frontend-domain.vercel.app

# SMTP Configuration (for email features)
SMTP_USER=your-smtp-username
SMTP_PASS=your-smtp-password
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587

# Firebase (for push notifications)
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_PRIVATE_KEY=your-firebase-private-key
FIREBASE_CLIENT_EMAIL=your-firebase-client-email

# Rate Limiting
COMMENT_RATE=10/min
WHISPER_RATE=5/10min

# Testing
TEST=false 