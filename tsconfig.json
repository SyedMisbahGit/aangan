{
  "references": [
    { "path": "./tsconfig.app.json" }
  ],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["frontend/src/*"],
      "@lib/*": ["frontend/lib/*"],
      "@theme": ["frontend/theme/theme.ts"]
    },
    "noImplicitAny": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "skipLibCheck": false,
    "allowJs": false,
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "types": ["@testing-library/jest-dom", "jest"],
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "strict": true
  },
  "include": [
    "frontend/src/**/*",
    "frontend/lib/**/*",
    "backend/src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.js",
    "**/*.d.ts"
  ]
}
