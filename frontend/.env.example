# Site Configuration
VITE_APP_NAME=WhisperVerse
VITE_APP_DOMAIN=yourdomain.com
VITE_APP_URL=https://yourdomain.com
VITE_API_URL=/api

# Social Media Handles
VITE_TWITTER_HANDLE=@yourtwitter
VITE_FACEBOOK_APP_ID=your-facebook-app-id
VITE_GOOGLE_ANALYTICS_ID=your-ga-id

# Feature Flags
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_OFFLINE=false

# Image Optimization
VITE_IMAGE_OPTIMIZATION_QUALITY=80
VITE_IMAGE_OPTIMIZATION_WIDTH=1920

# API Configuration
VITE_API_TIMEOUT=30000
VITE_API_VERSION=v1

# Auth Configuration
VITE_AUTH_TOKEN_KEY=auth_token
VITE_REFRESH_TOKEN_KEY=refresh_token
VITE_TOKEN_EXPIRY=3600

# Environment
NODE_ENV=development
